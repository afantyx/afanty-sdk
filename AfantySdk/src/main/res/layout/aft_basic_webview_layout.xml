        android:layout_marginTop="@dimen/aft_common_dimens_16dp"
        android:layout_marginLeft="@dimen/aft_common_dimens_8dp"
        android:src="@drawable/aft_webview_back"
        android:scaleType="fitXY" />

</FrameLayout>