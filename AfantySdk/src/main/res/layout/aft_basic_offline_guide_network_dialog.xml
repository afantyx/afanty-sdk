<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aft_black_transparent_70">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/aft_guide_network_dialog_bg"
        android:layout_marginLeft="@dimen/aft_common_dimens_20dp"
        android:layout_marginRight="@dimen/aft_common_dimens_20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/aft_color_191919"
            android:textSize="@dimen/aft_common_text_size_20sp"
            android:text="@string/aft_no_net_guide_network_dialog_headline"
            android:layout_marginTop="@dimen/aft_common_dimens_24dp"
            android:layout_marginLeft="@dimen/aft_common_dimens_24dp"
            android:layout_marginRight="@dimen/aft_common_dimens_24dp"
            android:layout_marginBottom="@dimen/aft_common_dimens_14dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/aft_common_dimens_24dp"
            android:layout_marginRight="@dimen/aft_common_dimens_24dp"
            android:layout_marginBottom="@dimen/aft_common_dimens_36dp"
            android:textColor="@color/aft_text_color_75"
            android:textSize="@dimen/aft_common_text_size_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginBottom="@dimen/aft_common_dimens_12dp"
            android:layout_marginRight="@dimen/aft_common_dimens_14dp">


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/aft_no_net_guide_network_dialog_refresh"
                android:textSize="@dimen/aft_common_text_size_14sp"
                android:textColor="@color/aft_color_999999"
                android:paddingLeft="@dimen/aft_common_dimens_9dp"
                android:paddingRight="@dimen/aft_common_dimens_9dp"
                android:paddingTop="@dimen/aft_common_dimens_5dp"
                android:paddingBottom="@dimen/aft_common_dimens_5dp" />

            <TextView
                android:id="@+id/tv_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aft_common_dimens_20dp"
                android:layout_marginRight="@dimen/aft_common_dimens_20dp"
                android:gravity="center"
                android:paddingLeft="@dimen/aft_common_dimens_9dp"
                android:paddingRight="@dimen/aft_common_dimens_9dp"
                android:paddingTop="@dimen/aft_common_dimens_5dp"
                android:paddingBottom="@dimen/aft_common_dimens_5dp"
                android:text="@string/aft_no_net_guide_network_dialog_connect"
                android:background="@color/aft_color_00ca89"
                android:textColor="@color/aft_white"
                android:textStyle="bold"
                android:textSize="@dimen/aft_common_text_size_14sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
