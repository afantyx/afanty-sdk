<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aft_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/aft_common_dimens_25dp"
        android:layout_marginTop="@dimen/aft_common_dimens_20dp"
        android:layout_marginRight="@dimen/aft_common_dimens_25dp"
        android:layout_marginBottom="@dimen/aft_common_dimens_20dp"
        android:textSize="@dimen/aft_common_text_size_16sp"
        android:textColor="@color/aft_black"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/aft_common_dimens_0.5dp"
        android:background="@color/aft_black_transparent_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/aft_common_dimens_0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/aft_common_dimens_15dp"
            android:paddingBottom="@dimen/aft_common_dimens_15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="@dimen/aft_common_dimens_150dp"
                android:layout_height="@dimen/aft_common_dimens_36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/aft_common_desc_yes"
                android:textColor="@color/aft_color_009868"
                android:textSize="@dimen/aft_common_text_size_14sp"
                android:textStyle="bold"
                android:background="@drawable/aft_auto_download_button_bg" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/aft_common_dimens_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/aft_common_dimens_15dp"
            android:paddingBottom="@dimen/aft_common_dimens_15dp">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="@dimen/aft_common_dimens_150dp"
                android:layout_height="@dimen/aft_common_dimens_36dp"
                android:background="@drawable/aft_button_filled_blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/aft_common_desc_no"
                android:textColor="@color/aft_white"
                android:textSize="@dimen/aft_common_text_size_14sp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
