<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aft_vast_player_reward_close_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="@string/aft_columbus_player_close_title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <TextView
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/aft_common_dimens_30dp"
            android:layout_marginRight="@dimen/aft_common_dimens_30dp"
            android:layout_marginTop="65dp"
            android:text="@string/aft_columbus_player_close_desc"
            android:textColor="#FF757575"
            android:textSize="16sp"
            android:layout_marginStart="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="143dp">

            <Button
                android:id="@+id/btn_player_close_confirm"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/btn_player_close_cancel"
                android:text="@string/aft_columbus_player_close_video"
                android:textColor="#FF999990"
                android:background="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/btn_player_close_cancel" />

            <Button
                android:id="@+id/btn_player_close_cancel"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/aft_dialog_button_bg"
                android:text="@string/aft_columbus_player_close_resume"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
