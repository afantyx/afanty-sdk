<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promotion_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/aft_common_dimens_20dp"
    android:background="@drawable/aft_proaz_out_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_improve_icon"
        android:layout_width="@dimen/aft_common_dimens_46dp"
        android:layout_height="@dimen/aft_common_dimens_46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/aft_common_dimens_14dp"
        android:layout_marginLeft="@dimen/aft_common_dimens_14dp"
        android:layout_marginTop="@dimen/aft_common_dimens_9dp"
        android:layout_marginBottom="@dimen/aft_common_dimens_9dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/app_improve_desc_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/aft_common_dimens_12dp"
        android:layout_marginLeft="@dimen/aft_common_dimens_12dp"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/aft_color_191919"
        android:textSize="@dimen/aft_common_text_size_14sp" />

    <TextView
        android:id="@+id/app_improve_install_text"
        android:layout_width="@dimen/aft_common_dimens_72dp"
        android:layout_height="@dimen/aft_common_dimens_26dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="@dimen/aft_common_dimens_16dp"
        android:layout_marginLeft="@dimen/aft_common_dimens_16dp"
        android:layout_marginEnd="@dimen/aft_common_dimens_14dp"
        android:layout_marginRight="@dimen/aft_common_dimens_14dp"
        android:background="@drawable/aft_proaz_btn"
        android:gravity="center"
        android:text="INSTALL"
        android:textColor="@color/aft_white"
        android:textSize="@dimen/aft_common_text_size_12sp" />

</LinearLayout>