<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="#7dffffff"
                android:endColor="#7dffffff"
                android:startColor="#7dffffff" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#00daff"
                    android:endColor="#00daff"
                    android:startColor="#00daff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#00dbff"
                    android:endColor="#00dbff"
                    android:startColor="#00dbff" />
            </shape>
        </clip>
    </item>

</layer-list>