<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="0"
                android:centerColor="#ff3c3c3c"
                android:centerY="0.5"
                android:endColor="#ff3c3c3c"
                android:startColor="#ff3c3c3c" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:centerY="0.5"
                    android:endColor="#ffa2a2a2"
                    android:startColor="#ffa2a2a2" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:centerY="0.5"
                    android:endColor="#FF247fff"
                    android:startColor="#FF247fff" />
            </shape>
        </clip>
    </item>

</layer-list>