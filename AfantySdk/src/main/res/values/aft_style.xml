<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProAzActivityDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AlphaAnimationActivity</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlphaAnimationActivity">
        <item name="android:windowEnterAnimation">@anim/aft_fade_in</item>
        <item name="android:windowExitAnimation">@anim/aft_fade_out</item>
    </style>

    <style name="aft_columbus_player_reward_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <declare-styleable name="aft_CircularCoverView">
        <attr name="left_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="cover_color" format="color" />
    </declare-styleable>

    <declare-styleable name="aft_RatingBar">
        <attr name="maxScore" format="integer" />
        <attr name="starDistance" format="dimension" />
        <attr name="starSize" format="dimension" />
        <attr name="starCount" format="integer" />
        <attr name="starEmpty" format="reference" />
        <attr name="starFill" format="reference" />
    </declare-styleable>

    <style name="Theme.Full" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/aft_transparent</item>
    </style>

    <style name="Theme.AutoDownloadDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/aft_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="SIProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/aft_media_view_loading_progress</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="common_titlebar_title_style">
        <item name="android:layout_marginEnd">@dimen/aft_common_dimens_42dp</item>
        <item name="android:layout_marginRight">@dimen/aft_common_dimens_42dp</item>
        <item name="android:layout_marginStart">@dimen/aft_common_titlebar_title_marginhorizontal</item>
        <item name="android:layout_marginLeft">@dimen/aft_common_titlebar_title_marginhorizontal</item>
    </style>


    <style name="Theme.Hybrid" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/aft_common_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listPopupWindowStyle">@style/HybridListPopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/HybridDropDownListViewStyle</item>
    </style>

    <style name="Theme.Hybrid.White" parent="@style/Theme.Hybrid">
        <item name="android:windowBackground">@color/aft_white</item>
    </style>

    <style name="HybridDropDownListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/aft_hybrid_dropdown_list_selector</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>

    <style name="HybridListPopupMenuStyle" parent="@android:style/Widget.ListPopupWindow">
        <item name="android:popupBackground">@drawable/aft_pop_menu_background</item>
    </style>

    <style name="Theme.Base" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Base.NoBg" parent="@style/Theme.Base">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.AD.Popup" parent="@style/Theme.Base.NoBg">
        <item name="android:windowBackground">@color/aft_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="TranslucentStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景色透明 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否有透明属性 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景是否半透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 状态栏透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent
        </item> <!-- activity窗口切换效果 -->
    </style>
</resources>